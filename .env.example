# =============================================================================
# Agentic AI Patterns Workshop - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to source control
# =============================================================================

# -----------------------------------------------------------------------------
# GitHub (for development)
# -----------------------------------------------------------------------------
GITHUB_TOKEN=""


# -----------------------------------------------------------------------------
# Azure OpenAI Configuration
# -----------------------------------------------------------------------------
# Get these values from your Azure OpenAI resource in the Azure Portal
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_VERSION="2024-12-01-preview"
#AZURE_OPENAI_DEPLOYMENT ="gpt-5-nano" # remove openai prefix if using Azure OpenAI
AZURE_OPENAI_DEPLOYMENT ="gpt-4.1-mini"
MEDIUM_DEPLOYMENT_MODEL_NAME="gpt-4.1-mini" # remove openai prefix if using Azure OpenAI
SMALL_DEPLOYMENT_MODEL_NAME="gpt-4.1-nano" # remove openai prefix if using Azure OpenAI
RESPONSES_DEPLOYMENT_NAME="gpt-4.1-nano" # remove openai prefix if using Azure OpenAI
#Monitoring
AZURE_AI_PROJECT_SUBSCRIPTION_ID=""
AZURE_AI_PROJECT_RESOURCE_GROUP=""
AZURE_AI_PROJECT_NAME=""


# -----------------------------------------------------------------------------
# Azure Monitor (Observability)
# -----------------------------------------------------------------------------
# Get this from your Application Insights resource
# Portal: Azure Portal → Application Insights → Overview → Connection String

APPLICATIONINSIGHTS_CONNECTION_STRING=""

# -----------------------------------------------------------------------------
# Workshop Server Configuration
# -----------------------------------------------------------------------------
# Ports for workshop services

# A2A Server (Agent-to-Agent protocol)
A2A_AGENT_HOST="http://localhost:8080"

# MCP Server (Model Context Protocol tools)
LOCAL_MCP_AGENT_SERVER_URL="http://localhost:8001/sse"
MCP_SERVER_PORT=8001

# AG-UI Server (Streaming chat interface)
AGUI_SERVER_URL="http://localhost:8888"
AGUI_SERVER_PORT=8888

# A2A Server port
A2A_SERVER_PORT=8080

# -----------------------------------------------------------------------------
# Observability Options
# -----------------------------------------------------------------------------
# Enable OpenTelemetry tracing
ENABLE_OTEL=true

# Include sensitive data in traces (development only!)
ENABLE_SENSITIVE_DATA=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
